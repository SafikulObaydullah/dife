@{
    ViewBag.Title = "Concerned Person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Assets/lib/CommonUI/js/casemanagement/ConcernedPerson.js"></script>
<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div style="border-top: 1px solid #794c8a; padding: 0; background: white; border: 1px solid #7ea700; ">
            <h4 style="padding: 5px; justify-content: center; display: flex; background: #acb6eb; color: white;" id="stepTitle">Concerned Person Information</h4>
            <div class="row" style="justify-content: right; margin-right: 13px;">
                <div class="col-md-11"></div>
                <div class="col-md-3" style="text-align:right">
                    <button class="btn btn-secondary" data-toggle="modal" onclick="AddNew()" style="margin-bottom: 5px;"><span class="k-icon k-i-plus"></span> Add New Person</button>
                </div>
            </div>
            <div class="row" style="justify-content:center; margin-bottom:20px;">

                <div class="col-md-12">
                    <div id="gridUser" style="width:100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="mdlUserReg" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Create Person</h5> <span id="spanParentID" style="display:none">0</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row" style="justify-content: center;">
                    <div class="col-md-6">
                        <span style="color:red">**</span><span> Person Name English</span> <input id="nameE" class="textbox" style="width:100%" />
                    </div>
                    <div class="col-md-6">
                        <span style="color:red">**</span><span> Person Name Bangla</span> <input id="nameB" class="textbox" style="width:100%" />
                    </div>
                </div>

                <div class="row" style="justify-content: center;">
                    <div class="col-md-6">
                        <span style="color:red">**</span><span>Office</span> <input id="office" style="width:100%" />
                    </div>
                    <div class="col-md-6">
                        <span style="color:red">**</span><span> Email</span> <input id="email" class="textbox" style="width:100%" />
                    </div>
       
                </div>

                <div class="row" style="justify-content: center;">
                    <div class="col-md-6">
                        <span style="color:red">**</span><span>Address</span> <input id="address" class="textbox" style="width:100%" />
                    </div>
                    <div class="col-md-6">
                        <span style="color:red">**</span><span>Phone</span> <input id="phone" class="textbox" style="width:100%" />
                    </div>
                </div>

                <div class="row" style="justify-content: center;">
                    <div class="col-md-6" style="margin-top:20px;">
                        <input type="checkbox" id="isActive" value="1" checked> <span>Is Active</span>
                    </div>
                    <div class="col-md-6">
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save()">Save</button>
            </div>
        </div>
    </div>
</div>

