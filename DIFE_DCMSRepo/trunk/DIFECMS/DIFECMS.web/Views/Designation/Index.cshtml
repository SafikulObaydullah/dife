@{
    ViewBag.Title = "Case Activity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Assets/lib/CommonUI/js/casemanagement/Designation.js?v=@DateTime.Now.ToString("yymmddHHmmss")"></script>
<div class="main_content_iner pt-0">
    <div class="container-fluid p-0">
        <div style="border-top: 1px solid #794c8a; padding: 0; background: white; border: 1px solid #7ea700; ">
            <div class="row" style="justify-content: right;">
                <div class="col-md-12 pt-2 pb-2" style="justify-content: space-between; align-items: center; display: flex; background: #acb6eb; color: white;">
                    <div>
                        <h4 id="stepTitle">Designation Information</h4>
                    </div>
                    <div>
                        <button class="btn btn-secondary" data-toggle="modal" onclick="AddNew()"><span class="k-icon k-i-plus"></span> Add New Designation</button>
                    </div>
                </div>
            </div>
            <div class="row" style="justify-content:center; margin-bottom:20px;">

                <div class="col-md-12 mt-2">
                    <div id="gridTable" style="width:100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="mdlUserReg" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Create Activity</h5> <span id="spanParentID" style="display:none">0</span>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row" style="justify-content: center;">
                    <div class="col-md-6">
                        <span style="color:red">**</span><span> Designation Name English</span> <input id="nameE" class="textbox" style="width:100%" required />
                    </div>
                    <div class="col-md-6">
                        <span style="color:red">**</span><span> Designation Name Bangla</span> <input id="nameB" class="textbox" style="width:100%" required />
                    </div>
              
                </div>

                <div class="row" style="justify-content: center;">
                    <div class="col-md-6" style="margin-top:20px;">
                        <input type="checkbox" id="isActive" value="1" checked><span>Is Active</span>
                    </div>
                    <div class="col-md-6">                    
                    </div>    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="Save()">Save</button>
            </div>
        </div>
    </div>
</div>

